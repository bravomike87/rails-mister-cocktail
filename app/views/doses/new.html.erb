<div class="container">

<h1>Add ingredients and doses</h1>

<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.input :description %>
  <%= f.input :ingredient_id, collection: @ingredients %>
  <%= f.submit "Add doses", class: "btn btn-primary" %>
<% end %>
<%= link_to "Back to #{@cocktail.name}", cocktail_path(@cocktail) %>
<%= link_to "Back to cocktails", cocktails_path %>
</div>
